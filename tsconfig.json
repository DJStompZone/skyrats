{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@minecraft",
            "./src/types"
        ],
        "noImplicitAny": false,
        "outDir": "scripts",
        "sourceMap": false,
        "paths": {
            "@minecraft/*": ["./node_modules/@minecraft/*"]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules/*"
    ]
}